<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20">

    <android.support.v7.widget.LinearLayoutCompat
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/dp_70"
        >

        <ImageView
            android:id="@+id/ivGoBack"
            android:layout_width="@dimen/dp_50"
            android:src="@drawable/ic_go_back_white"
            android:padding="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_50"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_70"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="顔認証管理"
            android:textColor="#fff"
            android:textSize="25dp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <!--<ListView-->
    <!--android:id="@+id/listview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1">-->
    <!--</ListView>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcyFace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/add_face_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ccc"
        tools:visibility="visible"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/image_add"
            android:hint="氏名を入力" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/name_edt"
            android:text="データベースに保存" />

    </RelativeLayout>

    <TextView
        android:id="@+id/iv_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_margin="@dimen/dp_5"
        android:background="#333"
        android:onClick="onClick"
        android:gravity="center"
        android:padding="5dp"
        android:paddingBottom="20dp"
        android:text="撮影して登録"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/iv_add_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_margin="@dimen/dp_5"
        android:background="#333"
        android:gravity="center"
        android:padding="5dp"
        android:onClick="onClick"
        android:paddingBottom="20dp"
        android:text="画像を選択して登録"
        android:textColor="#fff" />
</LinearLayout>